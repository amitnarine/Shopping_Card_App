<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="JobsTrackerFirebase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dark</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/white</item>
        <item name="android:editTextColor">@color/black</item>

        <item name="colorOnBackground">@color/blue</item>
        <item name="colorSurface">@color/blue</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorTertiary">@color/black</item>
        <item name="android:textColorLink">@color/blue_dark</item>
        <item name="android:textColorHint">@color/blue_light</item>

        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:backgroundDimEnabled">true</item>

    </style>

    <!-- Custom styling of the AlertDialog. -->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/red</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textColorPrimary">@color/blue</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- Styling the OK (positive) and Cancel (negative) buttons of the AlertDialog -->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>

        <!-- Styling the size of the AlertDialog in terms of the screen size -->
        <item name="windowMinWidthMajor">70%</item>
        <item name="windowMinWidthMinor">70%</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/red</item>
    </style>

    <!-- Custom styling of the FirebaseUI -->
    <style name="LoginTheme" parent="FirebaseUI">

        <!-- Background color of the login dialog -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Underline and Hint of the edittext -->
        <item name="colorControlActivated">@color/blue_dark</item>

        <!-- Top bar color of the login dialog -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>

        <!-- Typed in text color into the edittext -->
        <item name="android:textColorPrimary">@color/blue_dark</item>

        <!-- Remove the action bar from the login dialog -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

</resources>